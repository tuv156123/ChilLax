@model ChilLaxBackEnd.Models.AnnouncementWrapper

@{
    ViewBag.Title = "公告管理-修改作業";
}

<h2>修改作業</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Announcement</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.announcement_id)

    <div class="form-group">
        @Html.LabelFor(model => model.start_date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <input type="date" name="start_date" value= @Model.start_date.ToString("yyyy-MM-dd") class="form-control" />
            @Html.ValidationMessageFor(model => model.start_date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.end_date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <input type="date" name="end_date" value= @Model.end_date.ToString("yyyy-MM-dd") class="form-control" />
            @Html.ValidationMessageFor(model => model.end_date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bonus_for_focus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <input type="number" name="bonus_for_focus" value=@Model.bonus_for_focus step=0.5 max=10 min=1 class="form-control" />
            @Html.ValidationMessageFor(model => model.bonus_for_focus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bonus_for_shopping, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <input type="number" name="bonus_for_shopping" value=@Model.bonus_for_shopping step = 0.5 max = 10  min = 1 class="form-control"/>
            @Html.ValidationMessageFor(model => model.bonus_for_shopping, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.announcement, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.announcement, 5, 5, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.announcement, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="修改" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div class="col-md-offset-2 col-md-10">
    @Html.ActionLink("返回至清單", "List", null, new { @class = "btn btn-info" })
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
